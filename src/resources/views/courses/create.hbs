<div class="mt-4 layout-create">
    <h3>Đăng video</h3>

    <form class="form-create" method="post" action="/courses/store">
        <div class="mb-3">
            <label for="name">Tên video:</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description">Mô tả:</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="mb-3">
            <label for="videoId">Video ID:</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Thêm video</button>
    </form>
</div>